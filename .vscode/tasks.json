{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build youtubecontent",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "Almostengr.Website.YouTubeContent/Almostengr.Website.YouTubeContent.csproj"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "mkdocs serve",
            "command": "mkdocs",
            "type": "shell",
            "args": [
                "serve",
                "-f",
                "web/mkdocs.yml"
            ],
            "group": "none"
        },
        {
            "label": "dotnet run youtubecontent",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "Almostengr.Website.YouTubeContent"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": ["build"]
        }
    ]
}